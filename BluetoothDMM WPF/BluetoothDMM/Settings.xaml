<Window x:Class="BluetoothDMM.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BluetoothDMM"
        Style="{DynamicResource CustomWindowStyle}"
        mc:Ignorable="d"
        Title="Settings" Height="315.566" Width="484.146" WindowStyle="None" Topmost="True">
    <Grid>
        <CheckBox x:Name="checkBox1" Content="Auto Connect Last Device on startup"  HorizontalAlignment="Left" Height="34" Margin="56,40,0,0" VerticalAlignment="Top" Width="290"/>
        <CheckBox x:Name="checkBox2" Content="Chart ON on startup" HorizontalAlignment="Left" Height="34" Margin="56,70,0,0" VerticalAlignment="Top" Width="161"/>
        <CheckBox x:Name="checkBox3" Content="Always on top" HorizontalAlignment="Left" Height="34" Margin="56,100,0,0" VerticalAlignment="Top" Width="161"/>
        <CheckBox x:Name="checkBox41" Content="Analog Display ON on startup" HorizontalAlignment="Left" Height="34" Margin="56,130,0,0" VerticalAlignment="Top" Width="254" MinWidth="200"/>
        <CheckBox x:Name="checkBox5" Content="Log Raw Data" HorizontalAlignment="Left" Height="34" Margin="56,218,0,0" VerticalAlignment="Top" Width="161" IsChecked="True"/>
        <CheckBox x:Name="checkBox6" Content="Auto Reconnect after disconnection" HorizontalAlignment="Left" Height="29" Margin="56,252,0,0" VerticalAlignment="Top" Width="246" IsChecked="True"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="18" Margin="33,28,0,0" Text="Startup Settings" VerticalAlignment="Top" Width="241"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Height="18" Margin="33,205,0,0" Text="Advanced Settings" VerticalAlignment="Top" Width="241"/>
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Height="29" Margin="379,254,0,0" VerticalAlignment="Top" Width="76" Click="button_Click"/>
        <CheckBox x:Name="checkBox4" Content="Save window position and size" HorizontalAlignment="Left" Height="34" Margin="56,160,0,0" VerticalAlignment="Top" Width="254" MinWidth="200"/>

    </Grid>
</Window>
